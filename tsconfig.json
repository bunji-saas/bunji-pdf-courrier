{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": "./",

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  
  "exclude": ["test", "jest.config.js"],
  "ts-node": {
    "swc": true
  },
}
